{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/homecare.db",
    "AuthConnection": "Data Source=/app/data/auth.db"
  },
  "Jwt": {
    "Issuer": "HomeCareApp",
    "Audience": "HomeCareApp",
    "Key": "${JWT_SECRET_KEY}"
  },
  "Cors": {
    "AllowedOrigins": "${CORS_ALLOWED_ORIGINS}"
  }
}