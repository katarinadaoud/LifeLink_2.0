{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd api && dotnet restore && dotnet publish -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd api && dotnet out/api.dll --urls=http://0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}